@model IEnumerable<Wardrobe.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ShoeName)</h3>
                    <div class="row">
                        <div class="container-fluid">
                            <img src="@Html.DisplayFor(modelItem=>item.ShoePhoto)" style="width:100%; height:100%; max-height:" />
                        </div>
                    </div>
                    @*<p>@Html.DisplayFor(modelItem => item.Summary)</p>
                        <h5>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </h5>*@
                    @Html.ActionLink("Read More", "Details", new { id = item.ShoeID }, new { @class = "btn btn-primary", role = "button" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
                </div>
            </div>
        </div>
    }
</div>


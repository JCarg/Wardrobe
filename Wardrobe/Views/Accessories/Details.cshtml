@model Wardrobe.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<body class="mainpages" background="https://static.pexels.com/photos/172292/pexels-photo-172292.jpeg>">
    <div>
        <h2>@Html.DisplayFor(model => model.AccessoryName)</h2>
    </div>
    <div class="detailscontent container">
        <div class="row text-center">
            <div class="container detailsphoto col-md-8">
                <img align="middle" src="@Html.DisplayFor(model => model.AccessoryPhoto)" />
            </div>
        </div>
        <div class="row content">
            <div class="container mainpages content col-md-8">
                <h2></h2>
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(@model => model.AccesoryType): </dt>
                    <dd>@Html.DisplayFor(model => model.AccesoryType)</dd>
                    <dt>@Html.DisplayNameFor(@model => model.Color.ColorName): </dt>
                    <dd>@Html.DisplayFor(model => model.Color.ColorName)</dd>
                    <dt>@Html.DisplayNameFor(@model => model.Season.SeasonName): </dt>
                    <dd>@Html.DisplayFor(model => model.Season.SeasonName)</dd>
                    <dt>@Html.DisplayNameFor(@model => model.Occasion.OccasionName): </dt>
                    <dd>@Html.DisplayFor(model => model.Occasion.OccasionName)</dd>
                </dl>
            </div>
        </div>
        <div>
        </div>
    </div>
    <div class="buttons">
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoryID }) |
            @Html.ActionLink("Back", "Index")
        </p>
    </div>
</body>
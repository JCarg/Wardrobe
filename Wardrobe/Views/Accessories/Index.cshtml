@model IEnumerable<Wardrobe.Models.Accessory>

@{
    ViewBag.Title = "Index";
}
<body class="mainpages" background="https://static.pexels.com/photos/172292/pexels-photo-172292.jpeg>">
    <h2>Accessories</h2>
    <p>
        @Html.ActionLink("Add Item", "Create")
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail mainpages">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.AccessoryName)</h3>
                        <div class="row">
                            <div class="container-fluid">
                                <img src="@Html.DisplayFor(modelItem=>item.AccessoryPhoto)" style="width:100%; height:100%;" />
                            </div>
                        </div>
                    </div>
                    @Html.ActionLink("Details", "Details", new { id = item.AccessoryID }, new { @class = "btn btn-primary", role = "button" })
                </div>
            </div>
        }
    </div>
   
</body>
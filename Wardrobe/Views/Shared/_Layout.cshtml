<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Sansita" rel="stylesheet">
</head>
<body>
    
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="glyphicon glyphicon-sunglasses" aria-hidden="true"></span>
                        </button>
                        @Html.ActionLink("Closet.", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse" id=".navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#nav-collapse4" class="dropdown collapsed" data-toggle="dropdown" aria-expanded="false" aria-controls=".navbar-collapse">Enhance Collection </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Tops", "Create", "Tops")</li>
                                    <li>@Html.ActionLink("Bottoms", "Create", "Bottoms")</li>
                                    <li>@Html.ActionLink("Shoes", "Create", "Shoes")</li>
                                    <li>@Html.ActionLink("Accessories", "Create", "Accessories")</li>
                                    <li>@Html.ActionLink("Outfits", "Create", "Outfits")</li>
                                </ul>
                            </li>
                        </ul>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav middle">
                                <li>@Html.ActionLink("Tops", "Index", "Tops")</li>
                                <li>@Html.ActionLink("Bottoms", "Index", "Bottoms")</li>
                                <li>@Html.ActionLink("Shoes", "Index", "Shoes")</li>
                                <li>@Html.ActionLink("Accessories", "Index", "Accessories")</li>
                                <li>@Html.ActionLink("Outfits", "Index", "Outfits")</li>
                            </ul>
                        </div>

                    </div><!-- /.navbar-collapse -->
                </div>
</nav>
            

    <div class="container body-content">
        @RenderBody()
            <footer class="navbar-fixed-bottom">
                <p>&copy; @DateTime.Now.Year - Your Closet</p>
            </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

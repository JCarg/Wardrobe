@model IEnumerable<Wardrobe.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<body class="mainpages" background="https://static.pexels.com/photos/172292/pexels-photo-172292.jpeg>">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="thumbnail mainpages">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.OutfitName)</h3>
                        <div class="container-fluid">
                            <div class="row">
                                <img src="@Html.DisplayFor(modelItem=>item.Top.TopPhoto)" style="width:100%; height:100%; max-height:initial;" />
                            </div>
                            <div class="row">
                                <img src="@Html.DisplayFor(modelItem=>item.Bottom.BottomPhoto)" style="width:100%; height:100%; max-height:initial;" />
                            </div>
                            <div class="row">
                                <img src="@Html.DisplayFor(modelItem=>item.Accessory.AccessoryPhoto)" style="width:100%; height:100%; max-height:initial;"  />
                            </div>
                            <div class="row">
                                <img src="@Html.DisplayFor(modelItem=>item.Sho.ShoePhoto)" style="width:100%; height:100%; max-height:initial;" />
                            </div>
                        </div>
                    </div>
                    @Html.ActionLink("Details", "Details", new { id = item.ShoeID }, new { @class = "btn btn-primary", role = "button" })
                </div>
            </div>
        }
    </div>

</body>